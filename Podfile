# platform :ios, '9.0'

  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
use_frameworks!

def projectPods

  # Pods for Routehive

pod ‘Alamofire’, ‘~> 4.4’ # Netowrk activity / API Calling
pod ‘ObjectMapper’, ‘~> 3.1’ # JSON Mapping
pod ‘AlamofireNetworkActivityIndicator’, ‘~> 2.0’
pod ‘AlamofireImage’, ‘~> 3.1’ # Lazy loading of images
pod ‘IQKeyboardManagerSwift’, ‘5.0.0’ # Keyboard handler
pod ‘SkyFloatingLabelTextField’, ‘~> 3.0’ # Custom TextField
pod ‘SlideMenuControllerSwift’ # Drawer Menu
pod ‘CarbonKit’ # Android like segmented Control
pod ‘GoogleMaps’, '~> 3.0.0'
pod ‘GooglePlaces’, '~> 3.0.0'
pod ‘GooglePlacePicker’, '~> 3.0.0'
pod ‘Cosmos’, ‘~> 13.0’ # For Rating stars
